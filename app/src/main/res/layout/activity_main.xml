<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.venture.android.customview.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ground">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/Relative"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="UP"
            android:layout_width="wrap_content"
            android:id="@+id/btnUp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp" />

        <Button
            android:text="RIGHT"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/btnLeft"
            android:layout_toRightOf="@+id/btnUp"
            android:layout_toEndOf="@+id/btnUp"
            android:id="@+id/btnRight" />

        <Button
            android:text="DOWN"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/btnUp"
            android:layout_toLeftOf="@+id/btnRight"
            android:layout_toStartOf="@+id/btnRight"
            android:layout_marginTop="19dp"
            android:id="@+id/btnDown" />

        <Button
            android:text="LEFT"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btnLeft"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnUp"
            android:layout_toStartOf="@+id/btnUp" />
    </RelativeLayout>

</RelativeLayout>
